<div id="inbox_container">
  <div id="inbox_header">
    <p><%= "#{@user.name} - #{@user.email}: You have #{pluralize(@user.messages.count, "message")}"%></p>
    <% if flash[:error] && !flash[:error].blank? %>
      <p id="error"><%= flash[:error] %></p>
    <% else %>
      <p id="notice"><%= notice %></p>
    <% end %>
    <nav id="menu">
      <ul>
        <li><%= link_to "Refresh", user_path %></li>
        <li><%= link_to "Settings", edit_user_path %></li>
        <li><%= link_to "Sign out", signout_path %></li>
      </ul>
    </nav>
  </div>
  <div class="messages" summary="Messages de l'utilisateur">
        <% unless @user.messages.empty? %>
            <table>
              <tr style="text-align:left; background: #F8F8F8; height: 30px">
                <th>From: </th>
                <th>Subject</th>
                <th>Date:</th>
              </tr>
              <%= render @user.messages.desc(:date) %>
            </table>        
        <% end %>
  </div>
</div>